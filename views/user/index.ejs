<% layout('../layouts/master') -%>
<div class="sub-container">
<h3>Tabla de usuarios</h3>
  <table class='table table-striped'>
    <tr>
        <th>Código</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Usuario</th>
        <th>Correo electrónico</th>
        <th>Admin</th>
        <th></th>
        <th>Acciones</th>
        <th></th>
    </tr>
    <% _.each(users, function(user) { %>
    <tr data-id="<%= user.id %>" data-model="user">
      <td><%= user.id %></td>
      <td><%= user.firstName %></td>
      <td><%= user.lastName %></td>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.isAdmin %></td>
      <td><a href="/user/<%= user.id %>" class="btn btn-sm btn-primary">Detalles</a></td>
      <td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Editar</a></td>
  		<td>
  			<form action="/user/destroy/<%= user.id %>" method="POST"> 
          <input type="submit" class="btn btn-sm btn-danger" value="Eliminar"/>
        </form>
      </td>
    </tr>
    <% }) %>
  </table>
  <a href="/user/create" class="btn btn-md btn-primary">Crear Nuevo Usuario</a>
</div>
