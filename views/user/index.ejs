<% layout('../layouts/master') -%>
<h3>Usuarios</h3>
<table class='table'>
  <tr>
      <th>Código
      <th>Nombres
      <th>Apellidos
      <th>Correo electrónico
      <th>
      <th>Acciones
      <th>
  </tr>
  <% _.each(users, function(user) { %>
  <tr data-id="<%= user.id %>" data-model="user">
    <td><%= user.id %>
    <td><%= user.firstName %>
    <td><%= user.lastName %>
    <td><%= user.email %>
    <td><a href="/user/<%= user.id %>" class="btn btn-sm btn-primary">Detalles</a>
    <td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Editar</a>
		<td>
			<form action="/user/destroy/<%= user.id %>" method="POST"> 
        <input type="submit" class="btn btn-sm btn-danger" value="Eliminar"/>
      </form>
    </td>
  </tr>
  <% }) %>
</table>
<a href="/user/create" class="btn btn-md btn-primary">Crear Nuevo Usuario</a>

