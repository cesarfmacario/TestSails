<% layout('../layouts/master') -%>
<div class="container">
  <h3>Usuarios</h3>
  <table class='table'>
    <tr>
        <th>ID
        <th>First name
        <th>Last name
        <th>Email
        <th>
        <th>Actions
        <th>
    </tr>
    <% _.each(users, function(user) { %>
    <tr data-id="<%= user.id %>" data-model="user">
      <td><%= user.id %>
      <td><%= user.firstName %>
      <td><%= user.lastName %>
      <td><%= user.email %>
      <td><a href="/user/<%= user.id %>" class="btn btn-sm btn-primary">Show</a>
      <td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Editar</a>
  		<td>
  			<form action="/user/destroy/<%= user.id %>" method="POST"> 
          <input type="submit" class="btn btn-sm btn-danger" value="Delete"/>
        </form>
      </td>
    </tr>
    <% }) %>
  </table>
  <a href="/user/new">Crear Nuevo Usuario</a>
  </div>
